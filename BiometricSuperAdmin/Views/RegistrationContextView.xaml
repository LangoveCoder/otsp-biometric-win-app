<Page x:Class="BiometricSuperAdmin.Views.RegistrationContextView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Set Registration Context"
      Background="White">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="ðŸ“‹ Set Registration Context" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#1976D2"/>
            <TextBlock Text="Configure college, test, and device information for student registration" 
                       FontSize="14" 
                       Foreground="#666" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Form -->
        <Border Grid.Row="1" 
                Background="#F5F5F5" 
                CornerRadius="8" 
                Padding="30">
            <StackPanel>
                <!-- College Selection -->
                <TextBlock Text="College" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#333" 
                           Margin="0,0,0,8"/>
                <ComboBox x:Name="CollegeComboBox" 
                          FontSize="14" 
                          Height="40" 
                          Margin="0,0,0,20"/>

                <!-- Test Selection -->
                <TextBlock Text="Test / Examination" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#333" 
                           Margin="0,0,0,8"/>
                <ComboBox x:Name="TestComboBox" 
                          FontSize="14" 
                          Height="40" 
                          Margin="0,0,0,20"/>

                <!-- Laptop/Device ID -->
                <TextBlock Text="Laptop / Device ID" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#333" 
                           Margin="0,0,0,8"/>
                <TextBox x:Name="LaptopIdTextBox" 
                         FontSize="14" 
                         Height="40" 
                         VerticalContentAlignment="Center" 
                         Padding="10,0"/>

                <!-- Info Message -->
                <Border Background="#E3F2FD" 
                        BorderBrush="#2196F3" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15" 
                        Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ Important Information" 
                                   FontWeight="Bold" 
                                   FontSize="13" 
                                   Foreground="#1976D2" 
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="â€¢ This context will be saved and used for all student registrations" 
                                   FontSize="12" 
                                   Foreground="#555" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="â€¢ Make sure you select the correct college and test before registering students" 
                                   FontSize="12" 
                                   Foreground="#555" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="â€¢ The device ID helps identify which laptop was used for registration" 
                                   FontSize="12" 
                                   Foreground="#555" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="ClearButton" 
                    Content="ðŸ—‘ï¸ Clear Context" 
                    Click="ClearButton_Click"
                    Width="140" 
                    Height="40" 
                    FontSize="14" 
                    Margin="0,0,10,0"
                    Background="#F44336" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#F44336"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" 
                                            Padding="15,0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="SaveButton" 
                    Content="ðŸ’¾ Save Context" 
                    Click="SaveButton_Click"
                    Width="140" 
                    Height="40" 
                    FontSize="14" 
                    Background="#4CAF50" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" 
                                            Padding="15,0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Page>