<Page x:Class="BiometricSuperAdmin.Views.CollegeManagementView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="College Management">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="College Management" Style="{StaticResource PageTitle}"/>

        <materialDesign:Card Grid.Row="1" Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                    <Button x:Name="AddCollegeButton" 
                            Style="{StaticResource PrimaryButton}"
                            Click="AddCollegeButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Add College"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="RefreshButton"
                            Style="{StaticResource SecondaryButton}"
                            Click="RefreshButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <DataGrid x:Name="CollegesDataGrid"
                          Grid.Row="1"
                          Style="{StaticResource CustomDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="College Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="Auto"/>
                        <DataGridTextColumn Header="Contact Person" Binding="{Binding ContactPerson}" Width="Auto"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding ContactPhone}" Width="Auto"/>
                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                    <Button x:Name="EditButton"
                            Style="{StaticResource SecondaryButton}"
                            Click="EditButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Edit"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="DeleteButton"
                            Style="{StaticResource SecondaryButton}"
                            Click="DeleteButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Delete"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
