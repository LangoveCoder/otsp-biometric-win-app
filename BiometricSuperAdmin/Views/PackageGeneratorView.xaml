<Page x:Class="BiometricSuperAdmin.Views.PackageGeneratorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="PackageGeneratorView"
      Background="#FAFAFA">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Grid.Row="0" 
                   Text="Generate College Verification Package"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="#1976D2"
                   Margin="0,0,0,24"/>

        <!-- Instructions -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Instructions:" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBlock TextWrapping="Wrap" 
                           Foreground="#555"
                           LineHeight="22">
                    1. Select the college you want to generate a package for
                    <LineBreak/>
                    2. Select the test (automatically filtered by college)
                    <LineBreak/>
                    3. Choose where to save the package
                    <LineBreak/>
                    4. Click "Generate Package" to create an encrypted verification package
                    <LineBreak/>
                    5. The package will include the verification app and student data for that college only
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Selection Section -->
        <Border Grid.Row="2" 
                Background="White"
                CornerRadius="8"
                Padding="24"
                Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- College Selection -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Select College:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,0,16"/>

                <ComboBox x:Name="CollegeComboBox"
                          Grid.Row="0" Grid.Column="1"
                          Height="40"
                          FontSize="14"
                          Margin="0,0,0,16"
                          SelectionChanged="CollegeComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding CollegeName}" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding StudentCount, StringFormat='({0} students)'}" Foreground="#666"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Test Selection -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Select Test:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,0,16"/>

                <ComboBox x:Name="TestComboBox"
                          Grid.Row="1" Grid.Column="1"
                          Height="40"
                          FontSize="14"
                          Margin="0,0,0,16"
                          IsEnabled="False">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding TestName}" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding StudentCount, StringFormat='({0} students)'}" Foreground="#666"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Output Location -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Save Location:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,0,16"/>

                <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="OutputPathTextBox"
                             Grid.Column="0"
                             Height="40"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="8"
                             IsReadOnly="True"
                             Background="#F5F5F5"
                             Margin="0,0,8,0"/>

                    <Button x:Name="BrowseButton"
                            Grid.Column="1"
                            Content="Browse..."
                            Background="#1976D2"
                            Foreground="White"
                            Padding="16,10"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BrowseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1565C0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Summary -->
                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                        Background="#E3F2FD"
                        CornerRadius="4"
                        Padding="16"
                        Margin="0,8,0,0">
                    <TextBlock x:Name="SummaryTextBlock"
                               Text="Please select a college and test to see summary"
                               FontSize="13"
                               Foreground="#0D47A1"
                               TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </Border>

        <!-- Progress Section -->
        <Border Grid.Row="3"
                x:Name="ProgressSection"
                Background="White"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock x:Name="ProgressTextBlock"
                           Text="Generating package..."
                           FontSize="14"
                           Margin="0,0,0,8"/>

                <ProgressBar x:Name="GenerateProgressBar"
                             Height="24"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Background="#E0E0E0"
                             Foreground="#4CAF50"/>

                <TextBlock x:Name="ProgressPercentageTextBlock"
                           Text="0%"
                           FontSize="12"
                           Foreground="#666"
                           Margin="0,4,0,0"
                           HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ViewReportButton"
                    Grid.Column="0"
                    Content="View Package Report"
                    Background="#FF9800"
                    Foreground="White"
                    Padding="20,12"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14"
                    Visibility="Collapsed"
                    Click="ViewReportButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F57C00"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="OpenFolderButton"
                    Grid.Column="1"
                    Content="Open Folder"
                    Background="#2196F3"
                    Foreground="White"
                    Padding="20,12"
                    Margin="8,0"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14"
                    Visibility="Collapsed"
                    Click="OpenFolderButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="GeneratePackageButton"
                    Grid.Column="2"
                    Content="Generate Package"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="32,12"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="16"
                    FontWeight="SemiBold"
                    IsEnabled="False"
                    Click="GeneratePackageButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#43A047"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" 
              Grid.RowSpan="5"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="White"
                    CornerRadius="8"
                    Padding="32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="⏳"
                               FontSize="48"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="Generating package..."
                               FontSize="16"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>