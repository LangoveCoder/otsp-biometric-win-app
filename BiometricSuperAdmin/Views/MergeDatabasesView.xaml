<Page x:Class="BiometricSuperAdmin.Views.MergeDatabasesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="MergeDatabasesView"
      Background="#FAFAFA">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Grid.Row="0" 
                   Text="Merge Databases from Multiple Laptops"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="#1976D2"
                   Margin="0,0,0,24"/>

        <!-- Instructions -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
            </Border.Effect>
            
            <StackPanel>
                <TextBlock Text="Instructions:" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBlock TextWrapping="Wrap" 
                           Foreground="#555"
                           LineHeight="22">
                    1. Click "Select Database Files" to choose multiple .db files from different laptops
                    <LineBreak/>
                    2. Review the selected files in the list below
                    <LineBreak/>
                    3. Click "Start Merge" to combine all databases into the master database
                    <LineBreak/>
                    4. The system will detect duplicates and keep the most recent registration
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Selected Files Section -->
        <Border Grid.Row="2" 
                Background="White"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with buttons -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Selected Database Files" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="SelectFilesButton"
                                Content="Select Database Files"
                                Background="#1976D2"
                                Foreground="White"
                                Padding="16,10"
                                Margin="0,0,8,0"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="SelectFilesButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1565C0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="ClearFilesButton"
                                Content="Clear All"
                                Background="#F44336"
                                Foreground="White"
                                Padding="16,10"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ClearFilesButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D32F2F"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Files List -->
                <ListBox x:Name="FilesListBox"
                         Grid.Row="1"
                         BorderThickness="1"
                         BorderBrush="#DDD"
                         Background="#FAFAFA"
                         Padding="8"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    Padding="12"
                                    Margin="0,4"
                                    CornerRadius="4"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="💾"
                                               FontSize="20"
                                               Margin="0,0,12,0"
                                               VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding FileName}"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding FilePath}"
                                                   Foreground="#666"
                                                   FontSize="11"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- File count -->
                <TextBlock Grid.Row="2"
                           x:Name="FileCountTextBlock"
                           Text="No files selected"
                           Foreground="#666"
                           FontSize="12"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Progress Section -->
        <Border Grid.Row="3"
                x:Name="ProgressSection"
                Background="White"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock x:Name="ProgressTextBlock"
                           Text="Merging databases..."
                           FontSize="14"
                           Margin="0,0,0,8"/>
                
                <ProgressBar x:Name="MergeProgressBar"
                             Height="24"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Background="#E0E0E0"
                             Foreground="#4CAF50"/>

                <TextBlock x:Name="ProgressPercentageTextBlock"
                           Text="0%"
                           FontSize="12"
                           Foreground="#666"
                           Margin="0,4,0,0"
                           HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ViewReportButton"
                    Grid.Column="0"
                    Content="View Detailed Report"
                    Background="#FF9800"
                    Foreground="White"
                    Padding="20,12"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14"
                    Visibility="Collapsed"
                    Click="ViewReportButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F57C00"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="StartMergeButton"
                    Grid.Column="1"
                    Content="Start Merge"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="32,12"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="16"
                    FontWeight="SemiBold"
                    IsEnabled="False"
                    Click="StartMergeButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#43A047"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" 
              Grid.RowSpan="5"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="White"
                    CornerRadius="8"
                    Padding="32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="⏳"
                               FontSize="48"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="Processing merge..."
                               FontSize="16"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>