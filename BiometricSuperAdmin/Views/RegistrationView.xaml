<Page x:Class="BiometricSuperAdmin.Views.RegistrationView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="1400"
      Background="#FAFAFA">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Grid.Row="0" 
                   Text="Student Registration"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="#1976D2"
                   Margin="0,0,0,24"/>

        <!-- Context Information Card -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="24"
                Margin="0,0,0,24">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                  Opacity="0.1" 
                                  BlurRadius="16" 
                                  ShadowDepth="2" 
                                  Direction="270"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Current Registration Context" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="#333"
                           Margin="0,0,0,16"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="College:" FontWeight="SemiBold" Foreground="#666" Margin="0,0,8,0"/>
                    <TextBlock Grid.Column="1" x:Name="CollegeTextBox" Text="-" Foreground="#333" Margin="0,0,24,0"/>

                    <TextBlock Grid.Column="2" Text="Test:" FontWeight="SemiBold" Foreground="#666" Margin="0,0,8,0"/>
                    <TextBlock Grid.Column="3" x:Name="TestTextBox" Text="-" Foreground="#333" Margin="0,0,24,0"/>

                    <TextBlock Grid.Column="4" Text="Device:" FontWeight="SemiBold" Foreground="#666" Margin="0,0,8,0"/>
                    <TextBlock Grid.Column="5" x:Name="DeviceTextBox" Text="-" Foreground="#333"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Registration Form -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="32"
                    VerticalAlignment="Top"
                    Margin="0,0,12,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                      Opacity="0.1" 
                                      BlurRadius="16" 
                                      ShadowDepth="2" 
                                      Direction="270"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Enter student roll number and capture fingerprint" 
                               FontSize="14"
                               Foreground="#666"
                               Margin="0,0,0,24"/>

                    <!-- Roll Number Input with Validation Hint -->
                    <TextBlock Text="Roll Number *" 
                               FontWeight="SemiBold"
                               Foreground="#333"
                               Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,8">
                        <TextBox x:Name="RollNumberTextBox"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Padding="16"
                                 Background="#F5F5F5"
                                 BorderBrush="#1976D2"
                                 BorderThickness="2"
                                 MaxLength="5"
                                 TextAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Height="60"/>
                    </Grid>

                    <!-- Validation Hint -->
                    <Border Background="#E3F2FD" 
                            CornerRadius="4" 
                            Padding="12"
                            Margin="0,0,0,24">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â„¹ï¸" 
                                       FontSize="14" 
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="Roll Number must be exactly 5 digits" 
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#1976D2"/>
                                <TextBlock Text="Example: 12345" 
                                           FontSize="11"
                                           Foreground="#666"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Fingerprint Capture" 
                               FontWeight="SemiBold"
                               Foreground="#333"
                               Margin="0,0,0,8"/>

                    <Border Background="#E3F2FD" 
                            CornerRadius="8" 
                            Padding="24"
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Œ Click Register to capture fingerprint" 
                                       FontSize="14"
                                       Foreground="#1976D2"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Image will appear on right panel" 
                                       FontSize="12"
                                       Foreground="#666"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                x:Name="RegisterButton"
                                Content="ðŸ“‹ Register Student"
                                Click="RegisterButton_Click"
                                Background="#4CAF50"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Padding="24,12"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,12,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#4CAF50"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#45A049"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#BDBDBD"/>
                                            <Setter Property="Cursor" Value="No"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="1"
                                x:Name="ClearButton"
                                Content="ðŸ—‘ï¸ Clear"
                                Click="ClearButton_Click"
                                Background="#757575"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Padding="24,12"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#757575"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#616161"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- RIGHT: Fingerprint Preview -->
            <Border Grid.Column="1" 
                    Background="White"
                    CornerRadius="8" 
                    Padding="24"
                    VerticalAlignment="Top"
                    Margin="12,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                      Opacity="0.1" 
                                      BlurRadius="16" 
                                      ShadowDepth="2" 
                                      Direction="270"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Fingerprint Preview" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2196F3"
                               Margin="0,0,0,20"/>

                    <Border BorderBrush="#E0E0E0" 
                            BorderThickness="2" 
                            Background="#F9F9F9"
                            CornerRadius="4"
                            Width="350" 
                            Height="450"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                        <Grid>
                            <TextBlock x:Name="PlaceholderText"
                                       Text="No fingerprint captured yet"
                                       FontSize="14"
                                       Foreground="#999"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"/>

                            <Image x:Name="FingerprintImage" 
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <Border x:Name="CaptureInfoPanel" 
                            Visibility="Collapsed"
                            Background="#E8F5E9"
                            Padding="16"
                            CornerRadius="4"
                            Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Capture Details" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#2E7D32"
                                   Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Quality Score:" 
                                       FontWeight="SemiBold"
                                       Foreground="#333"
                                       Margin="0,0,12,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                       x:Name="QualityText" 
                                       Text="-"
                                       Foreground="#2E7D32"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Template Size:" 
                                       FontWeight="SemiBold"
                                       Foreground="#333"
                                       Margin="0,0,12,8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                       x:Name="TemplateSizeText" 
                                       Text="-"
                                       Foreground="#333"
                                       Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Image Size:" 
                                       FontWeight="SemiBold"
                                       Foreground="#333"
                                       Margin="0,0,12,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                       x:Name="ImageSizeText" 
                                       Text="-"
                                       Foreground="#333"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="3"
                x:Name="LoadingOverlay"
                Background="#99000000"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="â³" 
                           FontSize="48" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                <TextBlock Text="Capturing fingerprint..." 
                           FontSize="18" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>