<Window x:Class="BiometricSuperAdmin.Views.AddEditCollegeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit College"
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FAFAFA">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="DialogTitle"
                   Grid.Row="0"
                   Text="Add New College"
                   Style="{StaticResource PageTitle}"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- College Name -->
                <TextBlock Text="College Name *" FontWeight="Medium" Margin="0,16,0,4"/>
                <TextBox x:Name="CollegeNameTextBox"
                       Style="{StaticResource CustomTextField}"/>

                <!-- College Code -->
                <TextBlock Text="College Code *" FontWeight="Medium" Margin="0,16,0,4"/>
                <TextBox x:Name="CollegeCodeTextBox"
                       Style="{StaticResource CustomTextField}"
                       MaxLength="20"/>

                <!-- Address -->
                <TextBlock Text="Address" FontWeight="Medium" Margin="0,16,0,4"/>
                <TextBox x:Name="AddressTextBox"
                       Style="{StaticResource CustomTextField}"/>

                <!-- Contact Person -->
                <TextBlock Text="Contact Person" FontWeight="Medium" Margin="0,16,0,4"/>
                <TextBox x:Name="ContactPersonTextBox"
                       Style="{StaticResource CustomTextField}"/>

                <!-- Contact Phone -->
                <TextBlock Text="Contact Phone" FontWeight="Medium" Margin="0,16,0,4"/>
                <TextBox x:Name="ContactPhoneTextBox"
                       Style="{StaticResource CustomTextField}"/>

                <!-- Contact Email -->
                <TextBlock Text="Contact Email" FontWeight="Medium" Margin="0,16,0,4"/>
                <TextBox x:Name="ContactEmailTextBox"
                       Style="{StaticResource CustomTextField}"/>

                <!-- Is Active -->
                <CheckBox x:Name="IsActiveCheckBox"
                        Content="Active College"
                        Margin="0,16,0,0"
                        FontWeight="Medium"
                        IsChecked="True"/>

                <!-- Info Text -->
                <Border Background="#E3F2FD"
                      Padding="12"
                      CornerRadius="4"
                      Margin="0,24,0,0"
                      BorderBrush="#2196F3"
                      BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ Required Fields" FontWeight="Bold" Margin="0,0,0,4"/>
                        <TextBlock Text="â€¢ College Name and Code are mandatory" TextWrapping="Wrap" FontSize="12"/>
                        <TextBlock Text="â€¢ College Code must be unique" TextWrapping="Wrap" FontSize="12" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,16,0,0">
            <Button x:Name="CancelButton"
                  Style="{StaticResource SecondaryButton}"
                  Click="CancelButton_Click"
                  Content="âŒ Cancel"
                  Width="100"/>
            <Button x:Name="SaveButton"
                  Style="{StaticResource PrimaryButton}"
                  Click="SaveButton_Click"
                  Content="ðŸ’¾ Save"
                  Width="100"/>
        </StackPanel>
    </Grid>
</Window>
