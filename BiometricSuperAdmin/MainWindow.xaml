<Window x:Class="BiometricSuperAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BACT | OTSP - Biometric Verification System - SuperAdmin" 
        Height="768" 
        Width="1366"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Icon="SuperAdminIcon.ico">

    <Window.Resources>
        <!-- Segoe MDL2 Assets Font for Fingerprint Icon -->
        <FontFamily x:Key="SegoeIcon">Segoe MDL2 Assets</FontFamily>

        <!-- Page Title Style -->
        <Style x:Key="PageTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#673AB7"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Stats Card Style -->
        <Style x:Key="StatsCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="Gray"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#673AB7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7E57C2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="Foreground" Value="#999999"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Custom TextField Style -->
        <Style x:Key="CustomTextField" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <!-- Custom DataGrid Style -->
        <Style x:Key="CustomDataGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Top Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="File">
                <MenuItem Header="Backup Database" Click="BackupButton_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>

            <MenuItem Header="Tools">
                <MenuItem Header="Export Master Configuration" Click="ExportConfigMenuItem_Click"/>
                <MenuItem Header="Import Master Configuration" Click="ImportConfigMenuItem_Click"/>
                <MenuItem Header="Merge Databases" Click="MergeDatabases_Click"/>
                <Separator/>
                <MenuItem Header="Set Registration Context" Click="SetContextMenuItem_Click"/>
                <MenuItem Header="Clear Registration Context" Click="ClearContextMenuItem_Click"/>
            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="User Guide" Click="UserGuideMenuItem_Click"/>
                <MenuItem Header="About" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Layout -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar Navigation -->
            <Border Grid.Column="0" 
                    Background="#1A237E" 
                    BorderBrush="#0D47A1" 
                    BorderThickness="0,0,1,0">
                <DockPanel>
                    <!-- App Title at Top -->
                    <Border DockPanel.Dock="Top" Background="#0D47A1" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <!-- Fingerprint Icon using Segoe MDL2 Assets -->
                            <TextBlock Text="&#xE928;" 
                                     FontFamily="{StaticResource SegoeIcon}"
                                     FontSize="56" 
                                     HorizontalAlignment="Center" 
                                     Margin="0,0,0,10" 
                                     Foreground="White"/>
                            <TextBlock Text="BACT | OTSP Biometric System" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     HorizontalAlignment="Center" 
                                     Foreground="White" 
                                     Margin="0,8,0,0"/>
                            <TextBlock Text="SuperAdmin Panel" 
                                     FontSize="12" 
                                     HorizontalAlignment="Center" 
                                     Foreground="#B39DDB"/>
                        </StackPanel>
                    </Border>

                    <!-- Navigation Menu -->
                    <ListBox DockPanel.Dock="Top"
                             x:Name="NavigationListBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             FontSize="14"
                             SelectionChanged="NavigationListBox_SelectionChanged">
                        <ListBox.Resources>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="20,15"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border" 
                                                    Background="Transparent" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#283593"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#303F9F"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.Resources>

                        <ListBoxItem Content="ðŸ“Š Dashboard" IsSelected="True"/>
                        <ListBoxItem Content="ðŸ‘¤ Student Registration"/>
                        <ListBoxItem Content="ðŸ« Manage Colleges"/>
                        <ListBoxItem Content="ðŸ“ Manage Tests"/>
                        <ListBoxItem Content="ðŸ“¦ Generate Package"/>
                        <ListBoxItem Content="ðŸ“ˆ Reports &amp; Analytics"/>
                    </ListBox>

                    <!-- Copyright/Footer Section -->
                    <Border DockPanel.Dock="Bottom" 
                            Background="#0D47A1" 
                            Padding="15,12"
                            BorderBrush="#1565C0"
                            BorderThickness="0,1,0,0"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Version 1.0.0" 
                                     FontSize="10" 
                                     Foreground="#B39DDB" 
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,4"/>
                            <TextBlock Text="Â© 2026 BACT | OTSP" 
                                     FontSize="10" 
                                     Foreground="#B39DDB" 
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,6"/>
                            <TextBlock Text="Developed by" 
                                     FontSize="9" 
                                     Foreground="#9575CD" 
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,2"/>
                            <TextBlock Text="Anthropic &amp; Nadeem Baloch" 
                                     FontSize="10" 
                                     FontWeight="SemiBold"
                                     Foreground="White" 
                                     HorizontalAlignment="Center"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- BACT Logo at Very Bottom -->
                    <Border DockPanel.Dock="Bottom" 
                            Background="#0D47A1" 
                            Padding="20,15">
                        <Image Source="BACTLogo.png" 
                               Height="100"
                               HorizontalAlignment="Center"
                               Stretch="Uniform"/>
                    </Border>
                </DockPanel>
            </Border>

            <!-- Main Content Area -->
            <Frame x:Name="MainContentFrame" 
                   Grid.Column="1" 
                   NavigationUIVisibility="Hidden"
                   Background="#FAFAFA"/>
        </Grid>
    </DockPanel>
</Window>