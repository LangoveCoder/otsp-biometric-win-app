<Page x:Class="BiometricCollegeVerify.Views.VerificationView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="VerificationView"
      Background="#FAFAFA">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title with Scanner Status -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Student Verification"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#2E7D32"
                       VerticalAlignment="Center"/>

            <!-- Scanner Status -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Ellipse x:Name="ScannerStatusIndicator" 
                         Width="12" 
                         Height="12" 
                         Fill="Gray" 
                         Margin="0,0,8,0"/>
                <TextBlock x:Name="ScannerStatusText" 
                           Text="Scanner: Not Initialized" 
                           FontSize="12" 
                           Foreground="#666"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Roll Number Input Section -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Roll Number:" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,12,0"/>
                <TextBox x:Name="RollNumberTextBox" 
                         Width="200" 
                         FontSize="16" 
                         Padding="8"
                         VerticalAlignment="Center"
                         Margin="0,0,12,0"/>
                <Button Content="Load Student" 
                        Click="LoadStudentButton_Click"
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="14"
                        Padding="16,8"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
        <!-- Statistics Cards -->
        <Grid Grid.Row="2" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Students -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Total Students" FontSize="12" Foreground="#666" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TotalStudentsText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#2E7D32"/>
                </StackPanel>
            </Border>

            <!-- Verified -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Verified" FontSize="12" Foreground="#666" Margin="0,0,0,8"/>
                    <TextBlock x:Name="VerifiedStudentsText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                </StackPanel>
            </Border>

            <!-- Pending -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Pending" FontSize="12" Foreground="#666" Margin="0,0,0,8"/>
                    <TextBlock x:Name="PendingStudentsText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#FF9800"/>
                </StackPanel>
            </Border>

            <!-- Today -->
            <Border Grid.Column="3" Background="White" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Today" FontSize="12" Foreground="#666" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TodayVerificationsText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#2196F3"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Verification Panel -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="32" Margin="0,0,16,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>

                <StackPanel VerticalAlignment="Center">
                    <!-- Fingerprint Icon -->
                    <Viewbox Width="120" Height="120" Margin="0,0,0,32">
                        <Canvas Width="100" Height="100">
                            <Ellipse Width="100" Height="100" Fill="#E8F5E9" Stroke="#4CAF50" StrokeThickness="2"/>
                            <TextBlock Text="👆" FontSize="60" Canvas.Left="20" Canvas.Top="15"/>
                        </Canvas>
                    </Viewbox>

                    <!-- Instructions -->
                    <TextBlock x:Name="InstructionText"
                               Text="Place finger on scanner"
                               FontSize="24"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="#2E7D32"
                               Margin="0,0,0,32"/>

                    <!-- Verify Button -->
                    <Button x:Name="VerifyButton"
                            Content="🔍 Scan &amp; Verify"
                            Background="#4CAF50"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Padding="40,16"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            Cursor="Hand"
                            IsEnabled="False"
                            Click="VerifyButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#43A047"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Setter Property="Cursor" Value="No"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Manual Override -->
                    <Button x:Name="ManualOverrideButton"
                            Content="Manual Override"
                            Background="#FF9800"
                            Foreground="White"
                            FontSize="14"
                            Padding="24,12"
                            Margin="0,16,0,0"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ManualOverrideButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F57C00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
            <!-- Fingerprint Preview Panel -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="16" Margin="0,0,16,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="Fingerprint Preview"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12"/>

                    <!-- Fingerprint Display -->
                    <Border Grid.Row="1"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2"
                            CornerRadius="4"
                            Background="#FAFAFA">
                        <Grid>
                            <!-- Placeholder -->
                            <TextBlock x:Name="FingerprintPlaceholder"
                                       Text="No fingerprint captured yet"
                                       FontSize="12"
                                       Foreground="#999"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="20"/>

                            <!-- Image -->
                            <Image x:Name="FingerprintImage"
                                   Stretch="Uniform"
                                   Margin="10"/>
                        </Grid>
                    </Border>

                    <!-- Capture Info Panel -->
                    <Border x:Name="CaptureInfoPanel"
                            Grid.Row="2"
                            Background="#E8F5E9"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,12,0,0"
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Quality -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Quality:"
                                       FontSize="11"
                                       Foreground="#666"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="QualityText"
                                       Grid.Row="0" Grid.Column="1"
                                       Text="0%"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#4CAF50"
                                       TextAlignment="Right"
                                       Margin="0,0,0,4"/>

                            <!-- Template Size -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Template:"
                                       FontSize="11"
                                       Foreground="#666"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="TemplateSizeText"
                                       Grid.Row="1" Grid.Column="1"
                                       Text="0 bytes"
                                       FontSize="11"
                                       TextAlignment="Right"
                                       Margin="0,0,0,4"/>

                            <!-- Image Size -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Image Size:"
                                       FontSize="11"
                                       Foreground="#666"/>
                            <TextBlock x:Name="ImageSizeText"
                                       Grid.Row="2" Grid.Column="1"
                                       Text="0 x 0 px"
                                       FontSize="11"
                                       TextAlignment="Right"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <!-- Result Panel -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="24">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="Verification Result"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <!-- Result Content -->
                    <Border x:Name="ResultPanel"
                            Grid.Row="1"
                            Background="#F5F5F5"
                            CornerRadius="8"
                            Padding="20"
                            Visibility="Collapsed">
                        <StackPanel>
                            <!-- Status Icon -->
                            <TextBlock x:Name="StatusIcon"
                                       Text="✓"
                                       FontSize="64"
                                       HorizontalAlignment="Center"
                                       Foreground="#4CAF50"
                                       Margin="0,0,0,16"/>

                            <!-- Status Text -->
                            <TextBlock x:Name="StatusText"
                                       Text="VERIFIED"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Foreground="#4CAF50"
                                       Margin="0,0,0,24"/>

                            <!-- Student Info -->
                            <StackPanel x:Name="StudentInfoPanel" Visibility="Collapsed">
                                <TextBlock Text="Roll Number:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                <TextBlock x:Name="RollNumberText" Text="-" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>

                                <TextBlock Text="College:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                <TextBlock x:Name="CollegeText" Text="-" FontSize="14" Margin="0,0,0,16"/>

                                <TextBlock Text="Test:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                <TextBlock x:Name="TestText" Text="-" FontSize="14" Margin="0,0,0,16"/>

                                <TextBlock Text="Confidence:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                <TextBlock x:Name="ConfidenceText" Text="-" FontSize="14" Margin="0,0,0,16"/>

                                <TextBlock Text="Time:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                <TextBlock x:Name="TimeText" Text="-" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyStatePanel"
                                Grid.Row="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="No verification yet"
                                   FontSize="16"
                                   Foreground="#999"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>

                        <TextBlock Text="Scan a fingerprint to begin"
                                   FontSize="12"
                                   Foreground="#CCC"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay"
                Grid.RowSpan="4"
                Background="#99000000"
                Visibility="Collapsed">
            <Border Background="White"
                    CornerRadius="8"
                    Padding="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="300">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="⏳"
                               FontSize="48"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    <TextBlock x:Name="LoadingText"
                               Text="Processing..."
                               FontSize="16"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="#2E7D32"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Page>