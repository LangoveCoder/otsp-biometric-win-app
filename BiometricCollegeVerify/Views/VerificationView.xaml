<Page x:Class="BiometricCollegeVerify.Views.VerificationView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="VerificationView"
      Background="#FAFAFA">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Student Verification"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="#2E7D32"
                   Margin="0,0,0,24"/>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Students -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Total Students" FontSize="12" Foreground="#666" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TotalStudentsText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#2E7D32"/>
                </StackPanel>
            </Border>

            <!-- Verified -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Verified" FontSize="12" Foreground="#666" Margin="0,0,0,8"/>
                    <TextBlock x:Name="VerifiedStudentsText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                </StackPanel>
            </Border>

            <!-- Pending -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Pending" FontSize="12" Foreground="#666" Margin="0,0,0,8"/>
                    <TextBlock x:Name="PendingStudentsText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#FF9800"/>
                </StackPanel>
            </Border>

            <!-- Today -->
            <Border Grid.Column="3" Background="White" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Today" FontSize="12" Foreground="#666" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TodayVerificationsText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#2196F3"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Verification Panel -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="32" Margin="0,0,16,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>

                <StackPanel VerticalAlignment="Center">
                    <!-- Fingerprint Icon -->
                    <Viewbox Width="120" Height="120" Margin="0,0,0,32">
                        <Canvas Width="100" Height="100">
                            <Ellipse Width="100" Height="100" Fill="#E8F5E9" Stroke="#4CAF50" StrokeThickness="2"/>
                            <TextBlock Text="👆" FontSize="60" Canvas.Left="20" Canvas.Top="15"/>
                        </Canvas>
                    </Viewbox>

                    <!-- Instructions -->
                    <TextBlock x:Name="InstructionText"
                               Text="Place finger on scanner"
                               FontSize="24"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="#2E7D32"
                               Margin="0,0,0,32"/>

                    <!-- Verify Button -->
                    <Button x:Name="VerifyButton"
                            Content="Scan Fingerprint"
                            Background="#4CAF50"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Padding="40,16"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="VerifyButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#43A047"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Manual Override -->
                    <Button x:Name="ManualOverrideButton"
                            Content="Manual Override"
                            Background="#FF9800"
                            Foreground="White"
                            FontSize="14"
                            Padding="24,12"
                            Margin="0,16,0,0"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ManualOverrideButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F57C00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Result Panel -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="24">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="Verification Result"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <!-- Result Content -->
                    <Border x:Name="ResultPanel"
                            Grid.Row="1"
                            Background="#F5F5F5"
                            CornerRadius="8"
                            Padding="20"
                            Visibility="Collapsed">
                        <StackPanel>
                            <!-- Status Icon -->
                            <TextBlock x:Name="StatusIcon"
                                       Text="✓"
                                       FontSize="64"
                                       HorizontalAlignment="Center"
                                       Foreground="#4CAF50"
                                       Margin="0,0,0,16"/>

                            <!-- Status Text -->
                            <TextBlock x:Name="StatusText"
                                       Text="VERIFIED"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Foreground="#4CAF50"
                                       Margin="0,0,0,24"/>

                            <!-- Student Info -->
                            <StackPanel x:Name="StudentInfoPanel" Visibility="Collapsed">
                                <TextBlock Text="Roll Number:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                <TextBlock x:Name="RollNumberText" Text="-" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>

                                <TextBlock Text="College:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                <TextBlock x:Name="CollegeText" Text="-" FontSize="14" Margin="0,0,0,16"/>

                                <TextBlock Text="Test:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                <TextBlock x:Name="TestText" Text="-" FontSize="14" Margin="0,0,0,16"/>

                                <TextBlock Text="Confidence:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                <TextBlock x:Name="ConfidenceText" Text="-" FontSize="14" Margin="0,0,0,16"/>

                                <TextBlock Text="Time:" FontSize="12" Foreground="#666" Margin="0,0,0,4"/>
                                <TextBlock x:Name="TimeText" Text="-" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyStatePanel"
                                Grid.Row="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="No verification yet"
                                   FontSize="16"
                                   Foreground="#999"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Scan a fingerprint to begin"
                                   FontSize="12"
                                   Foreground="#CCC"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>