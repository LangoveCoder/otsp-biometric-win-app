<Window x:Class="BiometricCollegeVerify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OTSP - Biometric College Verification System" 
        Height="768" 
        Width="1400"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        Icon="CollegeVerifyIcon.ico">

    <Window.Resources>
        <!-- Segoe MDL2 Assets Font for Fingerprint Icon -->
        <FontFamily x:Key="SegoeIcon">Segoe MDL2 Assets</FontFamily>

        <Style x:Key="NavButton" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Column="0" Background="#1976D2" BorderBrush="#0D47A1" BorderThickness="0,0,1,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.2" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo Section -->
                <Border Grid.Row="0" Background="#0D47A1" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Fingerprint Icon using Segoe MDL2 Assets -->
                        <TextBlock Text="&#xE928;" 
                                   FontFamily="{StaticResource SegoeIcon}"
                                   FontSize="56" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,10" 
                                   Foreground="white"/>
                        <TextBlock Text="BACT | OTSP" FontSize="36" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="Biometric Verification" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="College System" FontSize="12" HorizontalAlignment="Center" Foreground="#90CAF9" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Import Package Button -->
                <Border Grid.Row="1" x:Name="ImportPackageButton" Background="#FF9800" Margin="15,0,15,25" CornerRadius="8" Cursor="Hand" MouseLeftButtonDown="ImportPackageButton_Click">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.4" Color="Black"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Grid Margin="18,14">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="📦" FontSize="22" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Import Package" Foreground="White" FontWeight="Bold" FontSize="15" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Row="1" Text="Load college verification data" Foreground="#E8F5E9" FontSize="11" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </Grid>
                </Border>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,5,0,0">
                        <Border x:Name="VerificationNav" Style="{StaticResource NavButton}" Background="#0D47A1" MouseLeftButtonDown="VerificationNav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✓" FontSize="20" Foreground="White" Width="30" FontWeight="Bold"/>
                                <TextBlock Text="Verification" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border x:Name="ReportsNav" Style="{StaticResource NavButton}" MouseLeftButtonDown="ReportsNav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="20" Foreground="White" Width="30"/>
                                <TextBlock Text="Reports" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border x:Name="StudentsListNav" Style="{StaticResource NavButton}" MouseLeftButtonDown="StudentsListNav_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" FontSize="20" Foreground="White" Width="30"/>
                                <TextBlock Text="Students List" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- College Info Panel -->
                <Border Grid.Row="3" x:Name="CollegeInfoPanel" Background="#0D47A1" Margin="15,0,15,15" Padding="20,16" CornerRadius="8" Visibility="Collapsed">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="📚 College Information" FontSize="13" Foreground="#90CAF9" FontWeight="Bold" Margin="0,0,0,14"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="College:" FontSize="11" Foreground="#90CAF9" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" x:Name="CollegeNameText" Text="Not Loaded" FontSize="11" Foreground="White" TextWrapping="Wrap" FontWeight="SemiBold"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Test:" FontSize="11" Foreground="#90CAF9" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" x:Name="TestNameText" Text="-" FontSize="11" Foreground="White" TextWrapping="Wrap"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Students:" FontSize="11" Foreground="#90CAF9" FontWeight="SemiBold"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock x:Name="StudentCountText" Text="0" FontSize="11" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text=" registered" FontSize="11" Foreground="#90CAF9" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- BACT Logo -->
                <Border Grid.Row="4" 
                        Background="#0D47A1" 
                        Padding="20,15"
                        Margin="0,10,0,0">
                    <Image Source="BACTLogo.png" 
                           Height="75"
                           HorizontalAlignment="Center"
                           Stretch="Uniform"/>
                </Border>

                <!-- Footer -->
                <Border Grid.Row="5" 
                        Padding="15,12" 
                        Background="#0D47A1"
                        BorderBrush="#1565C0"
                        BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBlock Text="Version 1.0.0" 
                                 FontSize="10" 
                                 Foreground="#90CAF9" 
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,4"/>
                        <TextBlock Text="© 2026 BACT | OTSP" 
                                 FontSize="10" 
                                 Foreground="#90CAF9" 
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,6"/>
                        <TextBlock Text="Developed by Anthropic &amp; Nadeem Baloch"
                                 FontSize="9" 
                                   FontWeight="SemiBold"
                                 Foreground="#64B5F6" 
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,2"/>
                        
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <!-- Top Bar -->
            <Border Height="60" VerticalAlignment="Top" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.1" Color="Black"/>
                </Border.Effect>

                <Grid Margin="30,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="PageTitleText" Text="Biometric Verification" FontSize="22" FontWeight="Bold" Foreground="#1976D2" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="📖 Help" Click="UserGuide_Click" Background="Transparent" BorderThickness="0" Foreground="#666" FontSize="13" Padding="15,8" Cursor="Hand" Margin="0,0,10,0"/>
                        <Button Content="ℹ️ About" Click="About_Click" Background="Transparent" BorderThickness="0" Foreground="#666" FontSize="13" Padding="15,8" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Frame -->
            <Frame x:Name="ContentFrame" Margin="0,60,0,0" NavigationUIVisibility="Hidden" Background="#F5F5F5"/>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Grid.ColumnSpan="2" Visibility="Collapsed" Background="#DD000000">
            <Border Background="White" CornerRadius="12" Padding="50,40" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="350">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="5" Opacity="0.4" Color="Black"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="⏳" FontSize="56" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock x:Name="LoadingText" Text="Loading..." FontSize="18" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,8"/>
                    <TextBlock Text="Please wait while we process your request" FontSize="13" HorizontalAlignment="Center" Foreground="#666" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="280"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>