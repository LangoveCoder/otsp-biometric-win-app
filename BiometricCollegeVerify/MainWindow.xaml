<Window x:Class="BiometricCollegeVerify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Biometric Verification System - College" 
        Height="700" 
        Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Top Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="White" Padding="8">
            <MenuItem Header="File">
                <MenuItem Header="Import College Package" Click="ImportPackage_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="User Guide" Click="UserGuide_Click"/>
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Layout -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" 
                    Background="#2E7D32" 
                    BorderBrush="#1B5E20" 
                    BorderThickness="0,0,1,0">
                <StackPanel>
                    <!-- Logo -->
                    <Border Background="#1B5E20" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="✓" 
                                     FontSize="48" 
                                     HorizontalAlignment="Center" 
                                     Foreground="White"
                                     FontWeight="Bold"/>
                            <TextBlock Text="Verification" 
                                     FontSize="16" 
                                     FontWeight="Bold" 
                                     HorizontalAlignment="Center" 
                                     Foreground="White" 
                                     Margin="0,8,0,0"/>
                            <TextBlock Text="System" 
                                     FontSize="12" 
                                     HorizontalAlignment="Center" 
                                     Foreground="#A5D6A7"/>
                        </StackPanel>
                    </Border>

                    <!-- Navigation -->
                    <ListBox x:Name="NavigationListBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             FontSize="14"
                             SelectionChanged="NavigationListBox_SelectionChanged">
                        <ListBox.Resources>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="20,15"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border" 
                                                    Background="Transparent" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#388E3C"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#43A047"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.Resources>

                        <ListBoxItem Content="✓ Verification" IsSelected="True"/>
                        <ListBoxItem Content="📊 Reports"/>
                    </ListBox>

                    <!-- College Info Panel -->
                    <Border x:Name="CollegeInfoPanel"
                            Background="#1B5E20" 
                            Margin="10,20,10,0" 
                            Padding="12"
                            CornerRadius="4"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="College Info" 
                                     FontSize="12" 
                                     Foreground="#A5D6A7" 
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,8"/>

                            <TextBlock x:Name="CollegeNameText"
                                     Text="Not Loaded" 
                                     FontSize="11" 
                                     Foreground="White" 
                                     TextWrapping="Wrap"
                                     Margin="0,0,0,4"/>

                            <TextBlock x:Name="StudentCountText"
                                     Text="Students: 0" 
                                     FontSize="10" 
                                     Foreground="#A5D6A7"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Main Content Area -->
            <Frame x:Name="MainContentFrame" 
                   Grid.Column="1" 
                   NavigationUIVisibility="Hidden"
                   Background="#FAFAFA"/>
        </Grid>
    </DockPanel>
</Window>